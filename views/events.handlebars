<main class="container">
    <div class="jumbotron">
        <h1 class="display-4">Create Event</h1>
        <form class="signup">
            <div class="row">
                <div class="col-sm-8">
                                <div class="form-group">
                <label for="Event Name">Event Name</label>
                <input type="text" class="form-control" id="event-input" placeholder="Event">
            </div>
            <div class="form-group">
                <label for="Event Description">Event Description</label>
                <input type="text" class="form-control" id="event-description" placeholder="Description">
            </div>
                        <div class="form-group">
                <label for="Event Name">Street Address</label>
                <input type="text" class="form-control" id="event-location" placeholder="Street address">
            </div>
            <div class="form-group">
                <label for="Event Name">State</label>
                <input type="text" class="form-control" id="event-state" placeholder="State">
            </div>
            <div class="form-group">
                <label for="Event Name">City</label>
                <input type="text" class="form-control" id="event-city" placeholder="City">
            </div>

                </div>
                <div class="col-sm-4">
                    
            <div class="form-group">
                <label for="Event Date">Event Date</label>
                <input type="date" style="width:250px;" class="form-control" id="event-date" placeholder="Date">
            </div>
            <div class="form-group">
                <label for="Event Start">Event Start</label>
                <input type="time" style="width:250px;" class="form-control" id="event-start" placeholder="Start">
            </div>
            <div class="form-group">
                <label for="Event End">Event End</label>
                <input type="time" style="width:250px;" class="form-control" id="event-end" placeholder="End">
            </div>
            <div class="form-group">
                <label for="Event End">Event Link</label>
                <input type="text" style="width:250px;" class="form-control" id="event-link"
                    placeholder="Optional Event Link for Virtual Events">
            </div>
            <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="msg"></span>
            </div>
                </div>
            </div>

            <button type="submit" id="create-event" class="btn btn-primary">Create Event</button>
        </form>
    </div>

<div class="container">
  <div class="row container">
    <div class="col-sm-12">
      <h2 class="card-title">Attending Events:</h2>
       {{#each events}}
      <div class="card mt-3">
                <div class="card-body">                 


                            <h5 class="card-title">{{this.dataValues.id}}. {{this.dataValues.name}}</h5>
                            <p class="card-text">{{this.dataValues.description}}</p>
                            <p class="card-text"><a href="api/join/{{this.dataValues.id}}"></a><button
                                    class="change-join btn btn-primary" data-id="{{this.dataValues.id}}">
                                    Join Event
                                </button></p>

                    {{!-- <li>
                            <p>
                                {{this.dataValues.id}}. {{this.dataValues.name}}

                                <button class="change-join" data-id="{{this.dataValues.id}}">
                                    Join Event
                                </button>
                            </p>
                        </li> --}}
                    

                </div>
      </div>
{{/each}}
    </div>
  </div>
  </div>

