<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="./login.html">
        <img src="/img/getogether-logo-full-xl.png" width="70" height="50" class="d-inline-block align-top" alt="logo">
    </a>
</nav>
<main class="container d-sm-flex mr-xs-0 ml-xs-0">
    <div class="row container">
        <div class="col-sm-6">
            <div class="card bg-white border-0 mt-5">
                <div class="card-header text-info bg-white">
                    <h1 class="display-4 font-weight-bold">Create Event</h1>
                </div>
                <div class="card-body">
                    <form class="signup">
                        <div class="form-group">
                            <label for="Event Name">Event Name</label>
                            <input type="text" class="form-control" id="event-input" placeholder="Event">
                        </div>
                        <div class="form-group">
                            <label for="Event Description">Event Description</label>
                            <input type="text" class="form-control" id="event-description" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label for="Event Name">State</label>
                            <input type="text" class="form-control" id="event-state" placeholder="State">
                        </div>
                        <div class="form-group">
                            <label for="Event Name">City</label>
                            <input type="text" class="form-control" id="event-city" placeholder="City">
                        </div>
                        <div class="form-group">
                            <label for="Event Name">Street Address</label>
                            <input type="text" class="form-control" id="event-location" placeholder="Street address">
                        </div>
                        <div class="form-group">
                            <label for="Event Date">Event Date</label>
                            <input type="date" style="width:250px;" class="form-control" id="event-date"
                                placeholder="Date">
                        </div>
                        <div class="form-group">
                            <label for="Event Start">Event Start</label>
                            <input type="time" style="width:250px;" class="form-control" id="event-start"
                                placeholder="Start">
                        </div>
                        <div class="form-group">
                            <label for="Event End">Event End</label>
                            <input type="time" style="width:250px;" class="form-control" id="event-end"
                                placeholder="End">
                        </div>
                        <div class="form-group">
                            <label for="Event End">Event Link</label>
                            <input type="text" style="width:250px;" class="form-control" id="event-link"
                                placeholder="Optional Event Link for Virtual Events">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>
                        <button type="submit" id="create-event" class="btn btn-info"
                            >Create Event</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6 events">

        </div>
    </div>
</main>

